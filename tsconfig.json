{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 14",
  
    "compilerOptions": {
      "lib": ["es2020"],
      "outDir": "./dist/",
      "module": "commonjs",
      "target": "es2020",
      "strict": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
    },
    "include": ["src/**/*"]
  }